@{
    ViewBag.Title = Settings.SiteName + " Account Activation";
}

<div class="col-md-6 col-md-offset-3">
    <h1>@ViewBag.Title</h1>
    Welcome to @Settings.SiteName, a verification code has been sent to the email address you provided. Please use the link in the email to activate your account. Account verification is required before you may login to @(Settings.SiteName).
</div>